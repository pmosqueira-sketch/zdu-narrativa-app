{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Content Audit Inventory",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "path",
      "kind",
      "size_bytes",
      "last_modified",
      "status"
    ],
    "properties": {
      "path": {
        "type": "string"
      },
      "kind": {
        "type": "string",
        "enum": [
          "md",
          "json",
          "js",
          "py",
          "html",
          "css",
          "other"
        ]
      },
      "purpose": {
        "type": "string"
      },
      "owner": {
        "type": "string"
      },
      "size_bytes": {
        "type": "integer",
        "minimum": 0
      },
      "last_modified": {
        "type": "string",
        "format": "date-time"
      },
      "status": {
        "type": "string",
        "enum": [
          "ok",
          "warn",
          "fail"
        ]
      },
      "notes": {
        "type": "string"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}