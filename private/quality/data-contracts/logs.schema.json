{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Markdown Audit Results",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "timestamp",
      "file_path",
      "severity",
      "findings_count"
    ],
    "properties": {
      "timestamp": {
        "type": "string",
        "format": "date-time"
      },
      "file_path": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "severity": {
        "type": "string",
        "enum": [
          "info",
          "warning",
          "error",
          "critical"
        ]
      },
      "findings_count": {
        "type": "integer",
        "minimum": 0
      },
      "issues": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "code",
            "message",
            "severity"
          ],
          "properties": {
            "code": {
              "type": "string"
            },
            "message": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "severity": {
              "type": "string",
              "enum": [
                "info",
                "warning",
                "error",
                "critical"
              ]
            },
            "hint": {
              "type": "string"
            }
          }
        }
      },
      "owner": {
        "type": "string"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}